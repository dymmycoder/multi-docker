{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "shengcer/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "shengcer/multu-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "shengcer/multi-worker",
            "essential": false
        },
        {
             "name": "nginx",
             "image": "shengcer/multi-nginx",
             "essential": true,
             "portMappings": [
                 {
                     "hostPort": 80,
                     "containerPort": 80
                 }
             ],
             "links": ["client", "server"] 
        }
    ]
}